{
  "name": "edge-rest-wallet",
  "version": "0.1.0",
  "private": true,
  "description": "A REST API for storing & sending money, powered by Edge",
  "repository": "https://github.app/EdgeApp/edge-rest-wallet",
  "license": "MIT",
  "author": "Airbitz, Inc.",
  "main": "lib/index.js",
  "scripts": {
    "build.lib": "sucrase -q -t typescript,imports,jsx -d ./lib ./src",
    "build.types": "tsc",
    "clean": "rimraf lib",
    "demo": "parcel serve src/demo/index.html --open",
    "fix": "npm run lint -- --fix",
    "lint": "eslint .",
    "precommit": "lint-staged && npm-run-all test -p build.*",
    "prepare": "husky install && npm-run-all clean -p build.*",
    "start": "node -r sucrase/register src/index.ts",
    "test": "mocha -r sucrase/register 'test/**/*.test.ts'"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "cors": "^2.8.5",
    "edge-core-js": "^0.18.0",
    "edge-currency-bitcoin": "^4.7.7",
    "express": "^4.17.1",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@types/chai": "^4.2.9",
    "@types/express": "^4.17.2",
    "@types/mocha": "^7.0.1",
    "@types/react": "^16.9.22",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "chai": "^4.2.0",
    "eslint": "^7.14.0",
    "eslint-config-standard-kit": "0.15.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.3",
    "mocha": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "prettier": "^2.2.0",
    "sucrase": "^3.12.1",
    "typescript": "^4.1.2"
  }
}
