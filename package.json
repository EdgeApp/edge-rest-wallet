{
  "name": "edge-rest-wallet",
  "version": "0.1.0",
  "private": true,
  "description": "A REST API for storing & sending money, powered by Edge",
  "repository": "https://github.app/EdgeApp/edge-rest-wallet",
  "license": "MIT",
  "author": "Airbitz, Inc.",
  "main": "lib/index.js",
  "scripts": {
    "build.lib": "sucrase -q -t typescript,imports,jsx -d ./lib ./src",
    "build.types": "tsc",
    "clean": "rimraf lib",
    "demo": "parcel serve src/html/index.html --open",
    "fix": "npm run lint -- --fix",
    "lint": "eslint .",
    "precommit": "lint-staged && npm-run-all test -p build.*",
    "prepare": "husky install && npm-run-all clean -p build.*",
    "start": "node -r sucrase/register src/api/index.ts",
    "test": "mocha -r sucrase/register 'test/**/*.test.ts'"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "cors": "^2.8.5",
    "edge-core-js": "^0.19.0",
    "edge-currency-bitcoin": "^4.9.20",
    "express": "^4.17.2",
    "react": "^17.0.2",
    "react-bootstrap": "^2.1.1",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@types/chai": "^4.2.9",
    "@types/express": "^4.17.2",
    "@types/mocha": "^9.0.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "^4.2.0",
    "eslint": "^8.6.0",
    "eslint-config-standard-kit": "0.15.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "mocha": "^9.1.4",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.2.0",
    "sucrase": "^3.12.1",
    "typescript": "^4.1.2"
  }
}
